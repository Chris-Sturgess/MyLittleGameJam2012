package  Scripts{	import Scripts.*;	import flash.display.MovieClip;	import flash.display.Stage;	import flash.events.Event;		public class Fireball extends MovieClip	{		var stageRef:Stage;		var moveX:int;		var moveY:int;		var damage:int = 10;		var player:Player;				public function Fireball(myStage:Stage, myX:int, myY:int, myPlayer:Player) 		{			stageRef = myStage;			moveX = myX;			moveY = myY;			addEventListener(Event.ENTER_FRAME, loop);			player = myPlayer;		}				public function loop(event:Event)		{			moveMe();			checkForDelete();		}				public function moveMe()		{			this.x += moveX;			this.y += moveY;			if (this.hitTestObject(player.HitBox))			{				player.takeHit();			}		}				public function checkForDelete()		{			if (this.x > stageRef.stageWidth || this.x < 0 || this.y > stageRef.stageHeight || this.y < 0)			{				die();			}		}				public function die()		{			removeEventListener(Event.ENTER_FRAME, loop);			this.parent.removeChild(this);		}			}}